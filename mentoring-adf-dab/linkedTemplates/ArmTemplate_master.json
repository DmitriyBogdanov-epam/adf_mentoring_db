		"LS_SRC_BlobStorageOnline_properties_typeProperties_sasUri_secretName": {
			"type": "string",
			"defaultValue": "MentoringBlobStorageOnlineReadSASURI"
		},
		"LS_SRC_LocalSQLInstance_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "EPUADNIW00B3"
