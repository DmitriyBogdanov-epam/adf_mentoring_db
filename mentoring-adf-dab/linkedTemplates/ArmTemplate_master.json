					"LS_Sink_DataMart_properties_typeProperties_server": {
						"value": "[parameters('LS_Sink_DataMart_properties_typeProperties_server')]"
					},
					"LS_Sink_DataMart_properties_typeProperties_database": {
						"value": "[parameters('LS_Sink_DataMart_properties_typeProperties_database')]"
