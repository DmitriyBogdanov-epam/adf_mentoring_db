		"LS_SRC_Australia Ratings_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'LS_SRC_Australia Ratings'"
		},
		"LS_SRC_SINK_DataLakeMovies_accountKey": {
			"type": "secureString",
